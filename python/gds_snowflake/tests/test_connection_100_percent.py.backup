@pytest.fixture
def mock_snowflake_connect():
    """Mock Snowflake connector with proper interface"""
    with patch("snowflake.connector.connect") as mock_connect:
        mock_conn = Mock()
        mock_conn.is_closed.return_value = False
        mock_conn.close = Mock()

        # Mock for regular cursor (returns tuples)
        mock_cursor = Mock()
        mock_cursor.fetchall.return_value = [("test_result",)]
        mock_cursor.fetchone.return_value = (
            "test_account",
            "us-west-2",
            "test_user",
        )
        mock_cursor.description = [("column1",), ("column2",)]
        mock_cursor.execute = Mock()
        mock_cursor.close = Mock()

        # Mock for DictCursor (returns dictionaries)
        mock_dict_cursor = Mock()
        mock_dict_cursor.fetchall.return_value = [{"col1": "val1"}]
        mock_dict_cursor.fetchone.return_value = {"col1": "val1"}
        mock_dict_cursor.description = [("column1",), ("column2",)]
        mock_dict_cursor.execute = Mock()
        mock_dict_cursor.close = Mock()

        # Setup cursor method to return different mocks based on cursor type
        def cursor_factory(cursor_class=None):
            if (cursor_class and hasattr(cursor_class, '__name__') and
                    'Dict' in cursor_class.__name__):
                return mock_dict_cursor
            return mock_cursor

        mock_conn.cursor.side_effect = cursor_factory

        mock_connect.return_value = mock_conn
        yield mock_connect, mock_conn, mock_cursor, mock_dict_cursor


class TestSnowflakeConnectionReal:
    """Test actual SnowflakeConnection functionality"""

    def test_init_with_vault_path(self, mock_vault_success):
        """Test initialization with vault secret path"""
        conn = SnowflakeConnection(
            account="test_account", vault_secret_path="secret/snowflake"
        )

        assert conn.account == "test_account"
        assert conn.private_key == "LS0tLS1CRUdJTiBQUklWQVRFIEtFWS0tLS0t"
        assert conn.connection is None
        mock_vault_success.assert_called_once()

    def test_init_with_all_real_params(self, mock_vault_success):
        """Test initialization with all supported parameters"""
        conn = SnowflakeConnection(
            account="test_account",
            user="test_user",
            warehouse="test_warehouse",
            role="test_role",
            database="test_database",
            vault_secret_path="secret/snowflake",
            vault_namespace="production",
            vault_mount_point="kv-v2",
            vault_role_id="role123",
            vault_secret_id="secret123",
            vault_addr="https://vault.example.com",
        )

        assert conn.account == "test_account"
        assert conn.user == "test_user"
        assert conn.warehouse == "test_warehouse"
        assert conn.role == "test_role"
        assert conn.database == "test_database"
        assert conn.vault_namespace == "production"

    def test_init_with_env_vars(self, mock_vault_success):
        """Test initialization with environment variables"""
        env_vars = {
            "SNOWFLAKE_USER": "env_user",
            "VAULT_NAMESPACE": "env_namespace",
            "VAULT_SECRET_PATH": "env_secret_path",
            "VAULT_MOUNT_POINT": "env_mount",
            "VAULT_ROLE_ID": "env_role_id",
            "VAULT_SECRET_ID": "env_secret_id",
            "VAULT_ADDR": "https://env_vault.com",
        }

        with patch.dict(os.environ, env_vars):
            conn = SnowflakeConnection(account="test_account")

            assert conn.user == "env_user"
            assert conn.vault_namespace == "env_namespace"

