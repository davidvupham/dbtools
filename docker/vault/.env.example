# HashiCorp Vault Environment Configuration
# Copy this file to .env and adjust values for your environment

# Vault Configuration
VAULT_SKIP_VERIFY=false
VAULT_LOG_LEVEL=info
VAULT_LOG_FORMAT=json

# Telemetry and Monitoring
VAULT_TELEMETRY_ENABLED=true

# TLS Configuration (when enabled)
# VAULT_CACERT=/vault/certs/ca.crt
# VAULT_CLIENT_CERT=/vault/certs/client.crt
# VAULT_CLIENT_KEY=/vault/certs/client.key

# Development Mode Settings (NEVER use in production)
# VAULT_DEV_ROOT_TOKEN_ID=root
# VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
