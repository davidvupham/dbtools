{
    "$schema": "https://raw.githubusercontent.com/PowerShell/DSC/main/schemas/2024/04/config/document.json",
    "metadata": {
        "description": "Installs SQL Server instance using SqlServerDsc via the PSDsc adapter."
    },
    "resources": [
        {
            "type": "Microsoft.Windows/PSDsc",
            "name": "SqlSetup",
            "properties": {
                "PSDscResource": {
                    "ModuleName": "SqlServerDsc",
                    "Name": "SqlSetup",
                    "Settings": {
                        "InstanceName": "MSSQLSERVER",
                        "Features": "SQLEngine",
                        "SourcePath": "C:\\SQLServerInstaller",
                        "SQLSysAdminAccounts": [
                            "CONTOSO\\SQLAdmins"
                        ],
                        "ForceReboot": false
                    }
                }
            }
        }
    ]
}
